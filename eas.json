{
  "cli": {
    "version": ">= 2.1.0"
  },
  "build": {
    "development": {
      "channel": "development",
      "developmentClient": true,
      "env": {
        "APP_ENV": "development",
        "NODE_ENV": "development"
      },
      "ios":{
        "simulator": true
      },
      "android":{
        "buildType": "apk"
      }
    },
    "production": {
      "channel": "production",
      "autoIncrement": true,
      "env": {
        "APP_ENV": "production",
        "APP_TYPE": "production"
      },
      "ios":{
        "resourceClass": "m1-medium"
      },
      "android":{
      }
    },
    "productionAPK": {
      "channel": "production",
      "autoIncrement": true,
      "env": {
        "APP_ENV": "production",
        "APP_TYPE": "production"
      },
      "android":{
        "buildType": "apk"
      }
    }
  }
}
