{
  "cli": {
    "version": ">= 2.1.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_ENV": "development",
        "NODE_ENV": "development"
      },
      "ios":{
        "simulator": true
      },
      "android":{
        "buildType": "apk"
      }
    },
    "production": {
      "env": {
        "API_URL": "https://dicegame-server.herokuapp.com/api",
        "APP_ENV": "production",
        "NODE_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
